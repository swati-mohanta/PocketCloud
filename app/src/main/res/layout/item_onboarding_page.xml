<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_space_gradient">

    <!-- TEXT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:padding="32dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to PocketCloud"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Turn idle devices into distributed compute power."
            android:textColor="#CCFFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- COMPUTE FIELD -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center">

        <!-- Node 1 -->
        <View
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:translationX="-80dp"
            android:background="@drawable/bg_node" />

        <!-- Node 2 (core glow) -->
        <View
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_node_core" />

        <!-- Node 3 -->
        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:translationX="90dp"
            android:translationY="40dp"
            android:background="@drawable/bg_node" />

    </FrameLayout>

</FrameLayout>